menu "Memory Configuration"

config MBASE
  hex "Memory base address"
#ifndef __ICS_EXPORT
  default 0x08048000 if MODE_USER
#endif
  default 0x0        if ISA_x86
  default 0x80000000

config MSIZE
  hex "Memory size"
  default 0x8000000

config PC_RESET_OFFSET
  hex "Offset of reset vector from the base of memory"
  default 0x100000 if ISA_x86
  default 0

choice
  prompt "Physical memory definition"
  default PMEM_MMAP if TARGET_NATIVE_ELF && !CC_ASAN
  default PMEM_MALLOC
config PMEM_MMAP
  depends on TARGET_NATIVE_ELF && !CC_ASAN
  bool "Using mmap()"
config PMEM_MALLOC
  bool "Using malloc()"
config PMEM_GARRAY
  depends on !TARGET_AM
  bool "Using global array"
endchoice

config MEM_RANDOM
  depends on MODE_SYSTEM && !DIFFTEST && !TARGET_AM
  bool "Initialize the memory with random values"
  default y
  help
    This may help to find undefined behaviors.

endmenu #MEMORY
